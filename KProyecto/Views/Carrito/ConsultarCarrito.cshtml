@model List<KProyecto.EF.TCarrito>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">


    <div class="card-body">
        <h4 class="card-title">Mi Carrito</h4>

        <hr><br />

        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">

                @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                {
                    <div class="alert alert-warning text-center">
                        @ViewBag.Mensaje
                    </div>
                }

                <table id="TablaDatos" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>SubTotal</th>
                            <th>Impuesto</th>
                            <th>Total</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var subtotal = @item.TProducto.Precio * @item.Cantidad;
                            var impuesto = subtotal * 0.13M;
                            var total = subtotal + impuesto;

                            <tr>
                                <td>@item.IdCarrito</td>
                                <td>@item.IdProducto - @item.TProducto.Nombre</td>
                                <td>@item.TProducto.Precio</td>
                                <td>@item.Cantidad</td>
                                <td>$ @subtotal.ToString("N2")</td>
                                <td>$ @impuesto.ToString("N2")</td>
                                <td>$ @total.ToString("N2") </td>
                                <td>@item.FechaCarrito.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <button type="button" class="btn bg-transparent" data-toggle="modal" data-target="#exampleModal"
                                            data-id="@item.IdUsuario">
                                        <i class="fa fa-trash" style="font-size:1.5em"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (Session["TotalCarrito"] != null && Session["TotalCarrito"].ToString() != "0.00")
                {
                    <div class="row mt-5">
                        <div class="col-3">
                            <p class="mt-2" style="font-size:12pt">El monto a cancelar es de: <b>$ @decimal.Parse(Session["TotalCarrito"].ToString()).ToString("N2") </b></p>
                        </div>
                        <div class="col-9">
                            <input type="button" value="Procesar Pago" class="btn btn-primary">
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <input id="IdUsuario" name="IdUsuario" type="hidden" class="form-control" />

                <label id="Texto" class="col-form-label"></label>

               

            </div>
            <div class="modal-footer">
                <button type="button" id="btnCambiarDatosUsuario" class="btn btn-primary">Procesar</button>
            </div>

        </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/Site/ConsultaUsuarios.js"></script>